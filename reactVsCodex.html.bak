<!DOCTYPE html>
<html>
	<head>
	  <title>reactVsCodex</title>
	  <meta charset="utf-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		<script>
        document.addEventListener("DOMContentLoaded", function() {


/* margen y padding a 0 */
document.body.style.margin = '0px';
document.body.style.padding = '0px';
/* html, body{fuente 18} */
document.body.style.fontSize = '18px';
document.body.style.fontFamily = 'sans-serif';
/* color de fondo f5f6f7 */
document.body.style.backgroundColor = '#f5f6f7';
/* Aprende React Desde Cero en h1 */
var h1 = document.createElement('h1');
h1.innerHTML = 'Aprende React Desde Cero';
/* centrar h1 */
h1.style.textAlign = 'center';
document.body.appendChild(h1);
/* h1 max ancho 940, font 2.5em, lato */
h1.style.maxWidth = '940px';
h1.style.fontSize = '2.5em';
h1.style.fontFamily = 'Lato';
/* weight 700, line height 1.1margen 40px 0 */
h1.style.fontWeight = '700';
h1.style.lineHeight = '1.1';
h1.style.margin = '40px 0';
/* document minHeight 100vn, display flex, flexwrap, alinear items centro, justificar contenido centro */
document.body.style.minHeight = '100vh';
document.body.style.display = 'flex';
document.body.style.flexWrap = 'wrap';
document.body.style.alignItems = 'center';
document.body.style.justifyContent = 'center';
/* textalign center */
document.body.style.textAlign = 'center';
/* contenedor principal */
var main = document.createElement('div');
document.body.appendChild(main);
/* min height 600, display flex, wrap, items centro, justificar contenido centro */
main.style.minHeight = '600px';
main.style.display = 'flex';
main.style.flexWrap = 'wrap';
main.style.alignItems = 'center';
main.style.justifyContent = 'center';
/* subcontenedor de main */
var submain = document.createElement('div');
main.appendChild(submain);
/* ancho 1170,alto368,margen 10 10 50, display flex, alinear items centro,  justificar contenido centro, fondo fff */
submain.style.width = '1170px';
submain.style.height = '368px';
submain.style.margin = '10px 10px 50px';
submain.style.display = 'flex';
submain.style.alignItems = 'center';
submain.style.justifyContent = 'center';
submain.style.backgroundColor = '#fff';
/* sombra 0 3 13 1 */
submain.style.boxShadow = '0 3px 13px 1px rgba(0,0,0,0.12)';
/* imagen en sbmain, alto 100%, ancho auto */
var img = document.createElement('img');
img.src = 'https://source.unsplash.com/random';
img.style.height = '100%';
img.style.width = 'auto';
submain.appendChild(img);
/* texto: "Curso de React Con Proyectos" en submain, alinear texto centro, padding 40,, fuente lato, peso 400, altura de linea 1.5rem */
var text = document.createElement('div');
text.innerHTML = 'Curso de React Con Proyectos';
text.style.textAlign = 'center';
text.style.padding = '40px';
text.style.fontFamily = 'Lato';
text.style.fontWeight = '400';
text.style.lineHeight = '1.5rem';
submain.appendChild(text);
/* subtext: "Aprende los fundamentos de React en este curso desde cero. " en text */
var subtext = document.createElement('div');
subtext.innerHTML = 'Aprende los fundamentos de React en este curso desde cero.';
text.appendChild(subtext);
/* fuente 1.3rem */
subtext.style.fontSize = '1.3rem';
/* subtext2 "Crearás cuatro proyectos paso a paso y aprenderás los fundamentos para comenzar a crear aplicaciones web interactivas con React. " en text, fuente 1.3rem, margen top 15, padding botom 30 */
var subtext2 = document.createElement('div');
subtext2.innerHTML = 'Crearás cuatro proyectos paso a paso y aprenderás los fundamentos para comenzar a crear aplicaciones web interactivas con React.';
text.appendChild(subtext2);
subtext2.style.fontSize = '1.3rem';
subtext2.style.marginTop = '15px';
subtext2.style.paddingBottom = '30px';
/* subtexto3: "01:26:22 Inicio del Proyecto 01:26:55 Crear la Estructura Inicial 01:29:27 Identificar los Componentes 01:32:04 Crear un Componente 01:42:28 Preparar el Proyecto 01:50:17 Mostrar un Componente 01:53:14 Importar un Componente 01:54:40 Exportar un Componente 01:58:28 Herramientas de React 01:59:16 Exportación Nombrada 02:01:26 Asignar Estilos con CSS 02:21:01 Recibir props en un Componente 02:25:59 Pasar props a un Componente 02:29:32 Personalizar la Imagen 02:36:56 Texto en Negrita 02:42:07 Revisión Final y Herramientas de React" en text, tamaño 1.1rem, justificar */
var subtext3 = document.createElement('div');
subtext3.innerHTML = '01:26:22 Inicio del Proyecto 01:26:55 Crear la Estructura Inicial 01:29:27 Identificar los Componentes 01:32:04 Crear un Componente 01:42:28 Preparar el Proyecto 01:50:17 Mostrar un Componente 01:53:14 Importar un Componente 01:54:40 Exportar un Componente 01:58:28 Herramientas de React 01:59:16 Exportación Nombrada 02:01:26 Asignar Estilos con CSS 02:21:01 Recibir props en un Componente 02:25:59 Pasar props a un Componente 02:29:32 Personalizar la Imagen 02:36:56 Texto en Negrita 02:42:07 Revisión Final y Herramientas de React';
text.appendChild(subtext3);
subtext3.style.fontSize = '1.1rem';
subtext3.style.textAlign = 'justify';
/* input texto "agrega titulo" */
var input = document.createElement('input');
input.type = 'text';
input.placeholder = 'Agrega un título';
document.body.appendChild(input);
/* al cambiar, h1 es input */
input.addEventListener('change', function(event) {
  h1.innerHTML = event.target.value;
});
/* input2 "cambia texto" */
var input2 = document.createElement('input');
input2.type = 'text';
input2.placeholder = 'Cambia el texto';
document.body.appendChild(input2);
/* al cambiar, text es input2 */
input2.addEventListener('change', function(event) {
  text.innerHTML = event.target.value;
  text.appendChild(subtext);
  text.appendChild(subtext2);
  text.appendChild(subtext3);
});
/* input3 "cambia subtext" */
var input3 = document.createElement('input');
input3.type = 'text';
input3.placeholder = 'Cambia el subtext';
document.body.appendChild(input3);
/* al cambiar, subtext is input3 y es hijo de text */
input3.addEventListener('change', function(event) {
  subtext.innerHTML = event.target.value;
  text.appendChild(subtext);
  text.appendChild(subtext2);
  text.appendChild(subtext3);
});
/* input4 "cambia subtext2 */
var input4 = document.createElement('input');
input4.type = 'text';
input4.placeholder = 'Cambia el subtext2';
document.body.appendChild(input4);
/* al cambiar, subtext2 es input4 */
input4.addEventListener('change', function(event) {
  subtext2.innerHTML = event.target.value;
  text.appendChild(subtext);
  text.appendChild(subtext2);
  text.appendChild(subtext3);
});
/* input5 "cambia subtext3" */
var input5 = document.createElement('input');
input5.type = 'text';
input5.placeholder = 'Cambia el subtext3';
document.body.appendChild(input5);
/* al cambiar, subtext3 es input5 */
input5.addEventListener('change', function(event) {
  subtext3.innerHTML = event.target.value;
  text.appendChild(subtext);
  text.appendChild(subtext2);
  text.appendChild(subtext3);
});
/* file, solo imagen */
var file = document.createElement('input');
file.type = 'file';
file.accept = 'image/*';
document.body.appendChild(file);
/* cargar imagen en img.src */
file.addEventListener('change', function(event) {
  img.src = URL.createObjectURL(event.target.files[0]);  
});
/* img ancho 500, cover */
img.style.width = '500px';
img.style.objectFit = 'cover';
/* solo exportar estructura nueva */
var button3 = document.createElement('button');
button3.innerHTML = 'Exportar estructura nueva';
document.body.appendChild(button3);
button3.addEventListener('click', function(event) {
  div2.remove();
  var html = document.body.innerHTML;  
  var blob = new Blob([html], {type: 'text/html'});
  var url = URL.createObjectURL(blob);
  var a = document.createElement('a');
  a.href = url;
  a.download = 'index.html';
  a.click();
});
/* div2 con todos los inputs */
var div2 = document.createElement('div');
div2.className = 'borrar';
document.body.appendChild(div2);
div2.appendChild(input);
div2.appendChild(input2);
div2.appendChild(input3);
div2.appendChild(input4);
div2.appendChild(input5);
div2.appendChild(file);
div2.appendChild(button3);

/* al cargar imagen, comprimirla y usarla en img.src */
file.addEventListener('change', function(event) {
  var file = event.target.files[0];
  var reader = new FileReader();
  reader.onload = function(event) {
    //var img = document.createElement('img');
    img.src = event.target.result;
    img.onload = function() {
      var canvas = document.createElement('canvas');
      var ctx = canvas.getContext('2d');
      ctx.drawImage(img, 0, 0);
      var MAX_WIDTH = 500;
      var MAX_HEIGHT = 500;
      var width = img.width;
      var height = img.height;
      if (width > height) {
        if (width > MAX_WIDTH) {
          height *= MAX_WIDTH / width;
          width = MAX_WIDTH;
        }
      } else {
        if (height > MAX_HEIGHT) {
          width *= MAX_HEIGHT / height;
          height = MAX_HEIGHT;
        }
      }
      canvas.width = width;
      canvas.height = height;
      var ctx = canvas.getContext('2d');
      ctx.drawImage(img, 0, 0, width, height);
      var dataurl = canvas.toDataURL('image/png');
      img.src = dataurl;
      //img.style.width = '500px';
      //img.style.objectFit = 'cover';
      //submain.appendChild(img);
    };
  };
  reader.readAsDataURL(file);
});

});

        </script>
    </head>
    
</html>